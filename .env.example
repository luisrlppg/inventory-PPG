# Environment variables for Docker deployment
# Copy this file to .env and customize as needed

# Flask Configuration
FLASK_ENV=production
FLASK_DEBUG=0
PYTHONUNBUFFERED=1

# Application Settings
SECRET_KEY=change-this-secret-key-in-production

# Database Settings (SQLite - no additional config needed)
# DATABASE_URL=sqlite:///inventario.db

# Admin Settings
# Change default admin password after first login
DEFAULT_ADMIN_USER=admin
DEFAULT_ADMIN_PASS=admin123

# Logging
LOG_LEVEL=INFO

# Container Settings
CONTAINER_PORT=5000
HOST_PORT=5000

# Nginx Settings (for production profile)
NGINX_HTTP_PORT=80
NGINX_HTTPS_PORT=443

# Email Configuration
MAIL_SERVER=smtp.gmail.com
MAIL_PORT=587
MAIL_USE_TLS=true
MAIL_USE_SSL=false
MAIL_USERNAME=tu-email@gmail.com
MAIL_PASSWORD=tu-contrase√±a-de-aplicacion
MAIL_DEFAULT_SENDER=tu-email@gmail.com

# Stock Alert Configuration
STOCK_ALERT_ENABLED=true
STOCK_ALERT_RECIPIENTS=admin@empresa.com,gerente@empresa.com,almacen@empresa.com
STOCK_ALERT_FREQUENCY_HOURS=24